<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="payments-0001" author="lagab">
        <createTable tableName="payments">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_payments" nullable="false"/>
            </column>
            <column name="payment_intent_id" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="refunded_amount" type="DECIMAL(10,2)" defaultValueNumeric="0.00"/>
            <column name="status" type="VARCHAR(50)"/>
            <column name="method" type="VARCHAR(50)"/>
            <column name="transaction_id" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="processed_at" type="DATETIME"/>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="payments-0002" author="lagab">
        <addForeignKeyConstraint baseTableName="payments"
                                 baseColumnNames="order_id"
                                 constraintName="fk_payments_order"
                                 referencedTableName="orders"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- Optional indexes (add later if needed)
    <changeSet id="payments-idx-0001" author="lagab">
        <createIndex indexName="idx_payments_order_id" tableName="payments">
            <column name="order_id"/>
        </createIndex>
    </changeSet>
    -->
</databaseChangeLog>
