<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="add-organization-id-to-events" author="lagab">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="events" columnName="organization_id"/>
            </not>
        </preConditions>
        <addColumn tableName="events">
            <column name="organization_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="fk-events-organization" author="lagab">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_EVENTS_ON_ORGANIZATION"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint
                baseTableName="events"
                baseColumnNames="organization_id"
                constraintName="FK_EVENTS_ON_ORGANIZATION"
                referencedTableName="organizations"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
