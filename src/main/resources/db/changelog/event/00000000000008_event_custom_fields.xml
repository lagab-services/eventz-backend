<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1756845060000-1" author="lagab">
        <createTable tableName="event_custom_fields">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_event_custom_fields"/>
            </column>
            <column name="field_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="field_label" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="field_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="is_required" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="field_options" type="TEXT"/>
            <column name="placeholder" type="VARCHAR(255)"/>
            <column name="display_order" type="INT"/>
            <column name="event_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="ticket_type_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="1756845060000-2" author="lagab">
        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="event_custom_fields"
                                 constraintName="FK_EVENT_CUSTOM_FIELDS_ON_EVENT"
                                 referencedColumnNames="id"
                                 referencedTableName="events"/>
    </changeSet>

    <changeSet id="1756845060000-3" author="lagab">
        <addForeignKeyConstraint baseColumnNames="ticket_type_id"
                                 baseTableName="event_custom_fields"
                                 constraintName="FK_EVENT_CUSTOM_FIELDS_ON_TICKET_TYPE"
                                 referencedColumnNames="id"
                                 referencedTableName="ticket_types"/>
    </changeSet>

</databaseChangeLog>
