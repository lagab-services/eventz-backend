<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1751201002074-1" author="lagab">
        <createTable tableName="api_key_roles">
            <column name="api_key_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="roles" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1751201002074-2" author="lagab">
        <createTable tableName="api_keys">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_api_keys"/>
            </column>
            <!--<column name="client_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>-->
            <column name="client_secret" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="client_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="DATETIME"/>
            <column name="active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1751201002074-3" author="lagab">
        <!--<addUniqueConstraint columnNames="client_id" constraintName="uc_api_keys_clientidvalue" tableName="api_keys"/>-->
        <addUniqueConstraint columnNames="client_secret" constraintName="uc_api_keys_clientsecretvalue" tableName="api_keys"/>
    </changeSet>
    <changeSet id="1751201002074-4" author="lagab">
        <addForeignKeyConstraint baseColumnNames="api_key_id" baseTableName="api_key_roles" constraintName="fk_apikey_roles_on_api_key"
                                 referencedColumnNames="id" referencedTableName="api_keys"/>
    </changeSet>

</databaseChangeLog>
