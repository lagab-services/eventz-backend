<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="attendees-0001" author="lagab">
        <createTable tableName="attendees">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_attendees" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="check_in_status" type="VARCHAR(50)"/>
            <column name="checked_in_at" type="DATETIME"/>
            <column name="checked_in_by" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>

            <column name="ticket_id" type="BIGINT"/>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="event_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="attendees-0002" author="lagab">
        <addUniqueConstraint tableName="attendees" columnNames="ticket_id" constraintName="uk_attendees_ticket"/>
    </changeSet>

    <changeSet id="attendees-0003" author="lagab">
        <addForeignKeyConstraint baseTableName="attendees"
                                 baseColumnNames="ticket_id"
                                 constraintName="fk_attendees_ticket"
                                 referencedTableName="tickets"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="attendees-0004" author="lagab">
        <addForeignKeyConstraint baseTableName="attendees"
                                 baseColumnNames="event_id"
                                 constraintName="fk_attendees_event"
                                 referencedTableName="events"
                                 referencedColumnNames="id"/>
    </changeSet>

